<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.health.shetuan.mapper.TResourceBookingMapper">
    
    <resultMap type="TResourceBooking" id="TResourceBookingResult">
        <result property="bookingId"    column="booking_id"    />
        <result property="resourceId"    column="resource_id"    />
        <result property="activityId"    column="activity_id"    />
        <result property="userId"    column="user_id"    />
        <result property="startTime"    column="start_time"    />
        <result property="endTime"    column="end_time"    />
        <result property="bookingQuantity"    column="booking_quantity"    />
        <result property="status"    column="status"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectTResourceBookingVo">
        select booking_id, resource_id, activity_id, user_id, start_time, end_time, booking_quantity, status, del_flag, create_by, create_time, update_by, update_time, remark from t_resource_booking
    </sql>

    <select id="selectTResourceBookingList" parameterType="TResourceBooking" resultMap="TResourceBookingResult">
        <include refid="selectTResourceBookingVo"/>
        <where>  
            <if test="resourceId != null "> and resource_id = #{resourceId}</if>
            <if test="activityId != null "> and activity_id = #{activityId}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="startTime != null "> and start_time = #{startTime}</if>
            <if test="endTime != null "> and end_time = #{endTime}</if>
            <if test="bookingQuantity != null "> and booking_quantity = #{bookingQuantity}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectTResourceBookingByBookingId" parameterType="Long" resultMap="TResourceBookingResult">
        <include refid="selectTResourceBookingVo"/>
        where booking_id = #{bookingId}
    </select>

    <insert id="insertTResourceBooking" parameterType="TResourceBooking" useGeneratedKeys="true" keyProperty="bookingId">
        insert into t_resource_booking
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="resourceId != null">resource_id,</if>
            <if test="activityId != null">activity_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="startTime != null">start_time,</if>
            <if test="endTime != null">end_time,</if>
            <if test="bookingQuantity != null">booking_quantity,</if>
            <if test="status != null">status,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="resourceId != null">#{resourceId},</if>
            <if test="activityId != null">#{activityId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="startTime != null">#{startTime},</if>
            <if test="endTime != null">#{endTime},</if>
            <if test="bookingQuantity != null">#{bookingQuantity},</if>
            <if test="status != null">#{status},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateTResourceBooking" parameterType="TResourceBooking">
        update t_resource_booking
        <trim prefix="SET" suffixOverrides=",">
            <if test="resourceId != null">resource_id = #{resourceId},</if>
            <if test="activityId != null">activity_id = #{activityId},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="bookingQuantity != null">booking_quantity = #{bookingQuantity},</if>
            <if test="status != null">status = #{status},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where booking_id = #{bookingId}
    </update>

    <delete id="deleteTResourceBookingByBookingId" parameterType="Long">
        delete from t_resource_booking where booking_id = #{bookingId}
    </delete>

    <delete id="deleteTResourceBookingByBookingIds" parameterType="String">
        delete from t_resource_booking where booking_id in 
        <foreach item="bookingId" collection="array" open="(" separator="," close=")">
            #{bookingId}
        </foreach>
    </delete>
</mapper>