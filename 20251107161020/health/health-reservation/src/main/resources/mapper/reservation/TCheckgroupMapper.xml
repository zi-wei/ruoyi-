<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.health.reservation.mapper.TCheckgroupMapper">
    
    <resultMap type="TCheckgroup" id="TCheckgroupResult">
        <result property="id"    column="id"    />
        <result property="code"    column="code"    />
        <result property="name"    column="name"    />
        <result property="helpCode"    column="help_code"    />
        <result property="sex"    column="sex"    />
        <result property="remark"    column="remark"    />
        <result property="attention"    column="attention"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectTCheckgroupVo">
        select id, code, name, help_code, sex, remark, attention, create_by, create_time, update_by, update_time from t_checkgroup
    </sql>

    <select id="selectTCheckgroupList" parameterType="TCheckgroup" resultMap="TCheckgroupResult">
        <include refid="selectTCheckgroupVo"/>
        <where>  
            <if test="keyword != null  and keyword != ''"> and (code like #{keyword} or name like #{keyword} or help_code like #{keyword})</if>
            <if test="code != null  and code != ''"> and code = #{code}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="helpCode != null  and helpCode != ''"> and help_code = #{helpCode}</if>
            <if test="sex != null  and sex != ''"> and sex = #{sex}</if>
            <if test="attention != null  and attention != ''"> and attention = #{attention}</if>
        </where>
    </select>
    
    <select id="selectTCheckgroupById" parameterType="Long" resultMap="TCheckgroupResult">
        <include refid="selectTCheckgroupVo"/>
        where id = #{id}
    </select>

    <insert id="insertTCheckgroup" parameterType="TCheckgroup" useGeneratedKeys="true" keyProperty="id">
        insert into t_checkgroup
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="code != null">code,</if>
            <if test="name != null">name,</if>
            <if test="helpCode != null">help_code,</if>
            <if test="sex != null">sex,</if>
            <if test="remark != null">remark,</if>
            <if test="attention != null">attention,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="code != null">#{code},</if>
            <if test="name != null">#{name},</if>
            <if test="helpCode != null">#{helpCode},</if>
            <if test="sex != null">#{sex},</if>
            <if test="remark != null">#{remark},</if>
            <if test="attention != null">#{attention},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateTCheckgroup" parameterType="TCheckgroup">
        update t_checkgroup
        <trim prefix="SET" suffixOverrides=",">
            <if test="code != null">code = #{code},</if>
            <if test="name != null">name = #{name},</if>
            <if test="helpCode != null">help_code = #{helpCode},</if>
            <if test="sex != null">sex = #{sex},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="attention != null">attention = #{attention},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTCheckgroupById" parameterType="Long">
        delete from t_checkgroup where id = #{id}
    </delete>

    <delete id="deleteTCheckgroupByIds" parameterType="String">
        delete from t_checkgroup where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>